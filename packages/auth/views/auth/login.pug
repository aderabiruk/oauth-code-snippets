html
    head
        title Login
        block styles
            link(rel="stylesheet", href="/public/vendors/bootstrap/css/bootstrap.min.css")
            link(rel="stylesheet", href="/public/vendors/animate/animate.css")
            link(rel="stylesheet", href="/public/vendors/animsition/css/animsition.min.css")

            link(rel="stylesheet", href="/public/styles/login/main.css")
            link(rel="stylesheet", href="/public/styles/login/util.css")

    body
        div(class="limiter")
            div(class="container-login100")
                div(class="wrap-login100 p-t-50 p-b-90")
                    form(class="login100-form validate-form flex-sb flex-w" method="POST" action="/v1/auth/login")
                        span(class="login100-form-title p-b-51") Login
                        div(class="wrap-input100 validate-input m-b-16" data-validate="Email is required")
                            input(class="input100" type="email" name="email" placeholder="Email" value='')
                            span(class="focus-input100")
                        div(class="wrap-input100 validate-input m-b-16" data-validate="Password is required")
                            input(class="input100" type="password" name="password" placeholder="Password")
                            span(class="focus-input100")
                        div(class="container-login100-form-btn m-t-17")
                            button(class="login100-form-btn") Login
                        if error                           
                            div(class="alert alert-danger error-message m-t-17") #{error}
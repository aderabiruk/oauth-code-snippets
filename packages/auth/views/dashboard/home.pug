extend layout.pug

block content
    div(class="row")
        div(class="col-xl-6")
            div(class="card card-stats")
                div(class="card-body")
                    div(class="row")
                        div(class="col")
                            h5(class="card-title text-uppercase text-muted mb-0") Number of Clients
                            span(class="h2 font-weight-bold mb-0") #{client_count}
                        div(class="col-auto")
                            div(class="icon icon-shape bg-gradient-red text-white rounded-circle shadow")
                                i(class="ni ni-single-02")
        div(class="col-xl-6")
            div(class="card card-stats")
                div(class="card-body")
                    div(class="row")
                        div(class="col")
                            h5(class="card-title text-uppercase text-muted mb-0") Number of Users
                            span(class="h2 font-weight-bold mb-0") #{user_count}
                        div(class="col-auto")
                            div(class="icon icon-shape bg-gradient-red text-white rounded-circle shadow")
                                i(class="ni ni-circle-08")
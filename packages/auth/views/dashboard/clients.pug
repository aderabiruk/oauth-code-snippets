extend layout.pug

block content
    div(class="row")
        div(class="col-xl-12")
            div(class="card")
                div(class="card-header border-0")
                    div(class="row align-items-center")
                        div(class="col")
                            h3(class="mb-0") Clients
                div(class="table-responsive")
                    table(class="table align-items-center table-flush")
                        thead(class="thead-light")
                            tr
                                th #
                                th Name
                                th Secret Name
                                th Redirect URI
                        tbody
                            each client, index in clients
                                tr
                                    td #{index + 1}
                                    td #{client.name}
                                    td #{client.secret}
                                    td #{client.redirect_uri}